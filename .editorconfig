# EditorConfig is awesome: https://EditorConfig.org
# based on example from above site

# top-most EditorConfig file
root = true

# default setting for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = off

# Tab indentation
[Makefile]
indent_style = tab

